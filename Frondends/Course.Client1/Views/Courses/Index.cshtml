
@{
    ViewData["Title"] = "Index";
}

@model List<CourseViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                <a href="~/courses/create" class="btn btn-primary">Kurs Kaydet</a>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Category</th>
                            <th>Kurs Adı</th>
                            <th>Fiyat</th>
                            <th>Süre</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model!=null&&Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><img style="width:72px" src="@item.PictureUrl"  class="img-thumbnail"/> </td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>
                                        <a asp-controller="courses" asp-action="update" asp-route-id="@item.Id" class="btn btn-primary" >Güncelle</a>
                                        <a asp-controller="courses" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" >Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                        <tr>
                            <td colspan="5"><div class="alert alert-danger">Bir Kursu Bulunmamaktadır</div></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
